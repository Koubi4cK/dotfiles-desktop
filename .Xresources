! +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
! URxvt Config                                                  +
! +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

! Font

URxvt*font                  : xft:Source Code Pro:pixelsize=13
URxvt*boldFont              : xft:Source Code Pro:pixelsize=13
URxvt.boldItalicFont        : xft:Source Code Pro:pixelsize=13
URxvt*allow_bold            : true


! Link support

URxvt*.perl-ext-common      : default,matcher
URxvt.url-launcher          : chromium
URxvt.matcher.button        : 1
URxvt.matcher.pattern.1     : \\bwww\\.[\\w-]\\.[\\w./?&@#-\[\]]*[\\w/-]


! Scrollbar / cursor

URxvt*saveLines             : 300000
URxvt.scrollBar             : false
!URxvt*scrollstyle          : plain
URxvt*cursorBlink           : false
URxvt*cursorUnderline       : true
URxvt*cursorColor           : #51c4d4


URxvt.internalBorder: 20
URxvt.iso14755: false
URxvt.iso14755_52: false


! +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
! Rofi Config                                                   +
! +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++


rofi.color-enabled: true
rofi.color-window:  nord0, nord0, nord0
rofi.color-normal:  nord0, nord5, nord0, nord1, nord11
rofi.color-active:  nord1, nord11, nord2, nord11, nord1
rofi.color-urgent: #e12a36, #dd2a4b, #1b2b34

rofi.lines: 4
rofi.hide-scrollbar: true
rofi.width: 300
rofi.padding: 20
rofi.terminal: termite
rofi.show-icons: true
rofi.run-command: fish -c '{cmd}'
