! URxvt
!
URxvt*scrollBar: false
URxvt*font: xft:Iosevka Nerd Font:style=Regular:pixelsize=13

Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
! Rofi Config                                                   +
! +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++


rofi.color-enabled: true
rofi.color-window:  #282a2e, #282a2e, #282a2e
rofi.color-normal:  #282a2e, #c5c8c6, #282a2e, #a54242, #f0c674
rofi.color-active:  #a54242, #f0c674, #8c9440, #f0c674, #a54242
rofi.color-urgent: #e12a36, #dd2a4b, #1b2b34

rofi.lines: 4
rofi.hide-scrollbar: true
rofi.width: 300
rofi.padding: 20
rofi.terminal: termite
rofi.show-icons: true
rofi.run-command: fish -c '{cmd}'
